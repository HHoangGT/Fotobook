<div class="d-flex align-items-center h-75 flex-column">
  <h2
    class="h3 mb-3 mt-5 display-6 fw-normal"
    style="font-family: 'Lexend', sans-serif; color: #3b5998"
  >
    Fotobook Signup
  </h2>

  <%= render "layouts/partials/3rdlogin" %>

  <main
    class="form-register w-75 m-auto bg-body-tertiary text-center border border-ligh mb-0 mt-1"
  >
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field mb-3">
        <%= f.label :email, class: "form-label float-start register-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your email" %>
      </div>

      <div class="field mb-3">
        <%= f.label :fname, "First Name", class: "form-label float-start register-label" %><br/>
        <%= f.text_field :fname, class: "form-control", placeholder: "Your Firstname" %>
      </div>

      <div class="field mb-3">
        <%= f.label :lname, "Last Name", class: "form-label float-start register-label" %><br/>
        <%= f.text_field :lname, class: "form-control", placeholder: "Your Lastname" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label float-start register-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: "form-label float-start register-label" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn w-50 py-2 register-button" %>
      </div>
    <% end %>
  </main>
</div>

<%= render "layouts/partials/errormessgaes" %>