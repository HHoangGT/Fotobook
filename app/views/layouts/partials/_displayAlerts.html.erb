<% if flash[:notice] %>
  <%= render "layouts/partials/alerts" %>
  <div class="alert alert-success d-flex align-items-center justify-content-center position-absolute bottom-0 end-0" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
      <use xlink:href="#check-circle-fill"/>
    </svg>
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:alert] %>
  <%= render "layouts/partials/alerts" %>
  <div class="alert alert-warning d-flex align-items-center justify-content-center position-absolute bottom-0 end-0" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:">
      <use xlink:href="#exclamation-triangle-fill"/>
    </svg>
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>