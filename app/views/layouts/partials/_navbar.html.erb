        <% if user_signed_in? %>
          <% if current_user.role == "manager" %>
            <%= link_to "Fotobook Admin", manage_photo_path, class: "navbar-brand link-light" %>
          <% else %>
            <%= link_to "Fotobook", feed_photos_path, class: "navbar-brand link-light" %>
          <% end %>
        <% else %>
          <%= link_to "Fotobook", discover_photos_path, class: "navbar-brand link-light" %>
        <% end %>
      </div>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav container-fluid pe-0">
          <li class="nav-item mt-1">
            <div class="container-fluid">
              <form class="d-flex" role="search">
                <input
                  class="form-control me-2"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                  />
                <button class="btn btn-outline-light" type="submit">
                  Search
                </button>
              </form>
            </div>
          </li>
          <% if current_user %>
            <li class="nav-item ps-3 d-inline-flex align-items-center ms-md-auto">
              <div class="me-2 mb-0 text-center avatar-header">
                <p class="mb-0">
                  <%#= current_user.fname[0] + current_user.lname[0] %>
                  <% if current_user.avatar.file.nil? %>
                    <%= image_tag("user-solid.svg", class: "img-thumbnail border-0 p-0 rounded-circle") %>
                  <% else %>
                    <%= image_tag(current_user.avatar.url, class: "img-thumbnail border-0 p-0 rounded-circle") %>
                  <% end %>
                </p>
              </div>
              <p class="text-light me-4 mb-0">
                <%= link_to current_user.fname + " " + current_user.lname, profiles_photos_path,
                            class: "text-decoration-none", style: "color: inherit" %></p>
              <%= link_to "Logout", destroy_user_session_path, class: "nav-link link-light active" %>
            </li>
          <% else %>
            <li class="nav-item ms-md-auto ps-3">
              <%= link_to "Login", new_user_session_path, class: "nav-link link-light active" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
