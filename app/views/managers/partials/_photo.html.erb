<div class="col-12 col-md-6 col-lg-3">
  <div class="position-relative">
    <div class="position-absolute top-0 w-100 bg-dark opacity-75 d-flex align-items-center justify-content-between">
      <p class="manager-photo-title mb-0 ms-1"><%= truncate(photo.title, length: 20) %></p>
      <%= link_to edit_photo_path(photo.id) do %>
        <%= image_tag("edit2.png", class: "me-1", style: "height: 25px; width: 25px") %>
      <% end %>
    </div>
    <%= image_tag(photo.image.url, class: "rounded img-fluid mb-2") %>
  </div>
</div>